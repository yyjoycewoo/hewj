<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.classroom">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AttendanceActivity"
            android:label="@string/attendance_activity_label"/>
        <activity
            android:name=".InstructorMenuActivity"
            android:label="@string/instructor_menu_activity_label"/>
        <activity
            android:name=".QuestionActivity"
            android:label="@string/question_activity_label"/>
        <activity
            android:name=".CompletionActivity"
            android:label="@string/completion_activity_label"/>
        <activity
            android:name=".NewQuestionActivity"
            android:label="@string/new_question_activity_label"/>
        <activity
            android:name=".CourseListActivity"
            android:label="@string/course_list_activity_label"/>
        <activity
            android:name=".CourseMenuActivity"
            android:label="@string/course_menu_activity_label"/>
        <activity
            android:name=".AnswerQuestionActivity"
            android:label="@string/answer_questions_activity_label"/>
    </application>

</manifest>